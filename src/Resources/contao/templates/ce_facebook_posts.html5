 <?php if ($this->beforeStyle): ?>
 <?= $this->beforeStyle; ?>
<?php endif; ?>
    <div class="<?=$this->class?>" id="<?=$this->cssID?>">
        <p class="date"><?=$this->createdTime?></p>
        <h3><?=$this->title?></h3>
        <p><?=$this->message?></p>
        <?php if ($this->videoLink): ?>
